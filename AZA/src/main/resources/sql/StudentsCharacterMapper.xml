<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="StudentsCharacterMapper">

	<resultMap id="studentsSelectMap" type="students">
		<result property="characterCode" 		column="character_code" 		jdbcType="NUMERIC"/>
		<result property="studentId" 			column="student_id" 			jdbcType="VARCHAR"/>
		<result property="teacherId" 			column="teacher_id" 			jdbcType="VARCHAR"/>
		<result property="characterContent" 	column="character_content" 		jdbcType="VARCHAR"/>
		<result property="studentName" 			column="student_name" 			jdbcType="VARCHAR"/>
	</resultMap>
	
	
	<!-- SQL : addCharacter INSERT -->
	<insert id="addStudentsCharacter" parameterType="students">
	INSERT INTO characters
	VALUES(seq_characters_characters_code.NEXTVAL, #{studentId}, #{teacherId}, #{charactersContent})
	</insert>

	<!-- SQL : character SELECT ONE  -->	
	<select id="getStudentsCharacter" parameterType="int" resultMap="studentsSelectMap">
	SELECT
	student_id, character_content
	FROM characters 
	WHERE characters_code = #{value}	
	</select>
	
	
	<!-- SQL : character UPDATE -->
	<update id="updateStudentsCharater" parameterType="students">
	UPDATE characters
	<set>
	character_content = #{characterContent}
	</set>
	WHERE character_code = #{characterCode}
	</update>
	
	<!-- SQL : character delete -->
	<delete id="deleteStudentsCharacter" parameterType="int">
	DELETE FROM characters WHERE characters_code = #{value};
	</delete>
	
	
</mapper>